Bootstrap: localimage
From: Singularity/python.sif

%files
    # Scenic
    {{DependencyFolder}}/Scenic_10-03-2023 /home/scenariogen/Scenic

    # ScenarioComplexity
    {{DependencyFolder}}/ScenarioComplexity/requirements.txt /home/scenariogen/ScenarioComplexity/requirements.txt
    {{DependencyFolder}}/z3-4.8.10-x64-ubuntu-18.04 /home/scenariogen/z3-4.8.10-x64-ubuntu-18.04

    # TF++ Carla Leaderboard agent
    {{DependencyFolder}}/carla_garage_fork/scenario_runner/requirements.txt /home/scenariogen/carla_garage_fork/scenario_runner/requirements.txt
    {{DependencyFolder}}/carla_garage_fork/leaderboard/requirements.txt /home/scenariogen/carla_garage_fork/leaderboard/requirements.txt
    {{DependencyFolder}}/carla_garage_fork/team_code/requirements.txt /home/scenariogen/carla_garage_fork/team_code/requirements.txt

    # ScenarioGeneration
    {{DependencyFolder}}/ScenarioGeneration/requirements.txt /home/scenariogen/ScenarioGeneration/requirements.txt

%post  

    #--- Setup python environment ---
    cd /home/scenariogen
    python3.8 -m venv .venv
    . .venv/bin/activate

    #--- Scenic 3 ---
    pip install numpy scipy pybind11 wheel
    # Apps needed for 3D geometry operations
    add-apt-repository ppa:openscad/releases
    apt-get update
    apt-get install -y openscad
    apt-get install -y blender
    pip install -e /home/scenariogen/Scenic

    #--- ScenarioGeneration ---
    pip install -r /home/scenariogen/ScenarioGeneration/requirements.txt
    # Clingo with Python support
    pip install --upgrade cmake
    pip install cffi
    git clone --depth 1 --branch v5.6.2 https://github.com/potassco/clingo.git
    git -C /home/scenariogen/clingo submodule update --init --recursive
    cmake -H/home/scenariogen/clingo -B/home/scenariogen/clingo-build \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/home/scenariogen/clingo-install \
        -DCLINGO_BUILD_APPS=ON \
        -DCLINGO_BUILD_SHARED=ON \
        -DCLINGO_BUILD_WITH_PYTHON=ON \
        -DCLINGO_PYTHON_VERSION:LIST="3.8;EXACT" \
        -DPython_ROOT=/home/scenariogen/.venv \
    -DPYCLINGO_INSTALL_DIR=/home/scenariogen/.venv/lib/python3.8/site-packages
    cmake --build /home/scenariogen/clingo-build
    cmake --build /home/scenariogen/clingo-build --target install

    #--- ScenarioComplexity ---
    pip install -r /home/scenariogen/ScenarioComplexity/requirements.txt

    #--- TF++ Carla Leaderboard agent ---
    pip install -r /home/scenariogen/carla_garage_fork/scenario_runner/requirements.txt
    pip install -r /home/scenariogen/carla_garage_fork/leaderboard/requirements.txt
    pip install -r /home/scenariogen/carla_garage_fork/team_code/requirements.txt

    # for code coverage measurements
    pip install pyinstrument coverage



%runscript
    cd /home/scenariogen
    ScenarioGeneration/Singularity/prod/entrypoint.sh "$@"

%startscript
    cd /home/scenariogen
    ScenarioGeneration/Singularity/prod/entrypoint.sh "$@"
